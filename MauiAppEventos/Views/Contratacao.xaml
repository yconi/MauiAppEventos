<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.Contratacao"
             Title="Contratacao"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False"
             Background="#1E1E1E">

    <VerticalStackLayout Padding="20"
                         VerticalOptions="Center">

        <Label Text="Cadastro de Eventos"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <Frame BackgroundColor="#2A2A2A"
               BorderColor="#3A3A3A"
               CornerRadius="18"
               Padding="20"
               HasShadow="True">

            <VerticalStackLayout Spacing="14">

                <Label Text="Insira o nome do evento"
                       TextColor="#CCCCCC"
                       FontSize="15"/>

                <Entry x:Name="txt_nome"
                       Background="#333333"
                       WidthRequest="260"
                       TextColor="White"
                       FontSize="15"/>

                <Label Text="Insira o local do evento"
                       TextColor="#CCCCCC"
                       FontSize="15"/>

                <Entry x:Name="txt_local"
                       Background="#333333"
                       WidthRequest="260"
                       TextColor="White"
                       FontSize="15"/>

                <HorizontalStackLayout VerticalOptions="Center"
                                       Margin="0,10,0,0"
                                       Spacing="10">
                    <Label Text="Participantes:"
                           TextColor="#CCCCCC"
                           FontSize="15"/>

                    <Label Text="{Binding Source={x:Reference stp_participantes}, Path=Value, StringFormat='{0}'}"
                           TextColor="#4CAF50"
                           FontSize="15"/>

                    <Stepper x:Name="stp_participantes"
                             Minimum="1"
                             Maximum="200"
                             Increment="1"
                             Value="1"
                             Background="#4CAF50"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,10,0,0"
                                       Spacing="20">

                    <VerticalStackLayout>
                        <Label Text="Escolha a data de início:"
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <DatePicker x:Name="dataInicio"
                                    MinimumDate="{Binding MinDatePickerDate}"
                                    TextColor="White"
                                    Background="#333333"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Escolha a data de fim:"
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <DatePicker x:Name="dataFim"
                                    MinimumDate="{Binding dataDeInicio}"
                                    TextColor="White"
                                    Background="#333333"/>
                    </VerticalStackLayout>

                </HorizontalStackLayout>

                <Label Text="Valor por participante:"
                       TextColor="#CCCCCC"
                       Margin="0,10,0,0"
                       FontSize="15"/>

                <Entry x:Name="txt_precoParticipante"
                       Background="#333333"
                       WidthRequest="260"
                       TextColor="White"
                       FontSize="15"/>

                <Button Text="Avançar"
                        Background="#4CAF50"
                        TextColor="White"
                        Margin="10,20,10,0"
                        CornerRadius="10"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        Clicked="Button_Clicked"/>
            </VerticalStackLayout>

        </Frame>

    </VerticalStackLayout>
</ContentPage>
