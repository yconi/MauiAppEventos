<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.Contratada"
             Background="#1E1E1E"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">

            <Label Text="Resumo da Contratação"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"/>

            <Frame BackgroundColor="#2A2A2A"
                   BorderColor="#3A3A3A"
                   CornerRadius="18"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="18">

                    <VerticalStackLayout>
                        <Label Text="Nome do Evento" 
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <Label Text="{Binding nome}"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Local"
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <Label Text="{Binding local}"
                               TextColor="White"
                               FontSize="18"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Participantes"
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <Label Text="{Binding numeroDeParticipantes}"
                               TextColor="#4CAF50"
                               FontSize="20"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="25">

                        <VerticalStackLayout>
                            <Label Text="Data de Início"
                                   TextColor="#CCCCCC"
                                   FontSize="15"/>
                            <Label Text="{Binding dataInicio, StringFormat='{0:dd/MM/yyyy}'}"
                                   TextColor="White"
                                   FontSize="18"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout>
                            <Label Text="Data de Fim"
                                   TextColor="#CCCCCC"
                                   FontSize="15"/>
                            <Label Text="{Binding dataFim, StringFormat='{0:dd/MM/yyyy}'}"
                                   TextColor="White"
                                   FontSize="18"/>
                        </VerticalStackLayout>

                    </HorizontalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Intervalo (dias)"
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <Label Text="{Binding intervalo}"
                               TextColor="#4CAF50"
                               FontSize="20"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Preço por Participante"
                               TextColor="#CCCCCC"
                               FontSize="15"/>
                        <Label Text="{Binding precoPorParticipante, StringFormat='R$ {0:F2}'}"
                               TextColor="White"
                               FontSize="18"/>
                    </VerticalStackLayout>

                    <Frame BackgroundColor="#333333"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,10,0,0">

                        <VerticalStackLayout>
                            <Label Text="Valor Total"
                                   TextColor="#CCCCCC"
                                   FontSize="16"/>

                            <Label Text="{Binding precoFinal, StringFormat='R$ {0:F2}'}"
                                   TextColor="#4CAF50"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>

                    </Frame>

                </VerticalStackLayout>

            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
